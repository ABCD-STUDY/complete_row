{
	"name": "Complete Row",

	"description": "Colors each row of an instrument if a value has been provided.",

	"namespace": "ABCD\\CompleteRow",

	"authors": [
		{
			"name": "Hauke Bartsch",
			"email": "HaukeBartsch@gmail.com",
			"institution": "ABCD Study, UC San Diego"
		}
	],

	"permissions": [
	    "redcap_data_entry_form",
	    "redcap_survey_page"
	],

        "enable-every-page-hooks-on-system-pages": false,

        "links": {
        },
        
        "no-auth-pages": [
        ],

	"system-settings": [
        ],

	"project-settings": [
                {
			"key": "row-color",
			"name": "Color used to highlight rows with a value",
			"required": true,
			"type": "radio",
                        "choices": [
	 	   	   { "value": "red", "name": "red" },
			   { "value": "green", "name": "green" },
			   { "value": "blue", "name": "green" }
                        ],
		        "default": "green"
		}
        ]
}
